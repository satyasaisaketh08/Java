package arrays;

public class searching_infinite_sorted_arrays {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		

	}
	
	public int search_infinite(int[] a , int key) {
		int low = 0;
		int high = 1;
		
		while(a[high] < a[low]) {
			low = high;
			high = 2*high;
		}
		return binarysearch(a,key,low,high);
	}

	public static int binarysearch(int[] a, int key, int low, int high) {
		// TODO Auto-generated method stub
		int start = low;
		int end = high;
		
		while(start<=end){
			int mid = (start + end) / 2;
			
			if (a[mid] == key){
                return mid;
            }
            else if(key < a[mid]){
                end = mid - 1;
            }else{
                start = mid + 1;
            }
		}
		
		return 0;
	}

}
