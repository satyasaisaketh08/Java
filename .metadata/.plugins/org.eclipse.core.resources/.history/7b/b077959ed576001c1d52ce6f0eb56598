package patterns;
import java.util.*;

public class pat_3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int n =sc.nextInt();
		int row = n-1;
		int nst = 1;
		while(row >= 0) {
			int cst = 1;
			while(cst<=nst) {
				System.out.print("*" + "/t");
				cst++;
			}
			row--;
			System.out.println();
			nst++;
		}

	}

}
